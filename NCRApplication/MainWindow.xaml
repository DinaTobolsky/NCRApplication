<Window x:Class="NCRApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NCRApplication"
        mc:Ignorable="d"
        AutomationProperties.AutomationId="mainWin"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox AutomationProperties.AutomationId="txtbox" Name="txtbox" HorizontalAlignment="Left" Height="40" Margin="286,104,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="264"/>
        <Label AutomationProperties.AutomationId="lblTitle" Name="lblTitle" Content="Enter Text Here:" HorizontalAlignment="Left" Height="45" Margin="113,104,0,0" VerticalAlignment="Top" Width="168"/>
        <Button AutomationProperties.AutomationId="btnOk" Name="btnOk" Content="OK" HorizontalAlignment="Left" Height="44" Margin="252,217,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
        <Label AutomationProperties.AutomationId="lblAlert" Name="lblAlert" Foreground="Red" Content="" HorizontalAlignment="Left" Margin="302,186,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
